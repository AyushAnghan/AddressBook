@model LocMvc.Models.StateModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Add State</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="State" asp-action="Save">
                        <!-- Hidden Field for StateId -->
                        <input type="hidden" asp-for="StateId" />

                        <!-- State Name Field -->
                        <div class="mb-3">
                            <label asp-for="StateName" class="form-label">State Name</label>
                            <input asp-for="StateName" class="form-control" placeholder="Enter State Name" required />
                            <span asp-validation-for="StateName" class="text-danger"></span>
                        </div>

                        <!-- Dropdown for CountryID -->
                        <div class="mb-3">
                            <label asp-for="CountryID" class="form-label">Country</label>
                            <select asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryId", "CountryName"))" class="form-select" required>
                                <option value="">Select a Country</option>
                            </select>
                            <span asp-validation-for="CountryID" class="text-danger"></span>
                        </div>

                        <!-- State Code Field -->
                        <div class="mb-3">
                            <label asp-for="StateCode" class="form-label">State Code</label>
                            <input asp-for="StateCode" class="form-control" placeholder="Enter State Code" required />
                            <span asp-validation-for="StateCode" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
